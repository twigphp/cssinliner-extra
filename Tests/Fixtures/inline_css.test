--TEST--
"inline_css" filter
--TEMPLATE--
{% apply inline_css|spaceless %}
    <html>
        <style>p { color: red }</style>
        <p>Great!</p>
    </html>
{% endapply %}


{% apply inline_css(source('css'))|spaceless %}
    <html>
        <p>Great!</p>
    </html>
{% endapply %}


{% apply inline_css(source('css'), source('more_css'))|spaceless %}
    <html>
        <p>Great!</p>
    </html>
{% endapply %}


{% apply inline_css(source('css') ~ source('more_css'))|spaceless %}
    <html>
        <p>Great!</p>
    </html>
{% endapply %}


{{ include('html')|inline_css(source('css') ~ source('more_css'))|spaceless }}
--TEMPLATE(html)--
    <html>
        <p>Great!</p>
    </html>
--TEMPLATE(css)--
p { color: red }
--TEMPLATE(more_css)--
p { color: blue }
--DATA--
return []
